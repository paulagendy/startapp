<main class="form--wrapper">
  <h1 class="headline-display">Tell us about your project</h1>
  <!-- this is just to see where this pushes  -->
  <%= simple_form_for(@project) do |f| %>
    <div class ="fieldset">
      <h2 class="form--subtitle">Give us a bit of information on your company</h2>
      <%= f.input :name, label: "Company name"  %>
      <span>Industry</span>
      <div class="dropdown-parent">
        <%= f.select :industry, collection: Project::INDUSTRY%>
      </div>
    </div>
    <div class="fieldset">
      <h2 class="form--subtitle">What is your project about</h2>
      <%= f.input :description, as: :text %>
    </div>
    <div class="fieldset">
      <h2 class="form--subtitle">What kind of profile are you looking for </h2>
      <%= f.association :technologies, input_html: {multiple: true, include_hidden: false }, collection: Technology.all%>
      <%= f.association :spoken_language, collection: SpokenLanguage.all %>
    </div>
    <div class="fieldset">
      <h2 class="form--subtitle">How many developers needed</h2>
      <%= f.input :number_of_developers %>
    </div>
    <%= f.submit %>
  <% end %>
</main>
<style>
  .form--wrapper {
    padding: 24px;
  }
  .fieldset {
    margin-bottom: 60px;
  }
  .form--subtitle {
    font-style: normal;
    font-weight: 500;
    font-size: 32px;
    margin-bottom: 24px;
  }
  .s-form--dropdown {
    display: block;
  }
  .dropdown-parent > select {
    display: block;
    width: 100%;
    padding: 8px 4px;
    height: 38px;
  }
  .form--submit-btn {
    color: var(--on-primary);
  }
  .form--wrapper > input:last-of-type  {
    width: 100%;
    background-color: var(--primary-container);
    color: var(--on-primary);
  }
</style>
