<main class="project-section">
  <div class=" card card-wrapper--main">
    <div class="project--title-container">
      <span class="project-subtitle">Project</span>
      <h1 class="project-title"><%= @project.name %></h1>
    </div>
    <span class="project-subtitle">Description</span>
    <p><%= @project.description %></p>
    <div class="inline-flex">
      <div>
        <span class="project-subtitle">Industry</span>
        <p> <%= @project.industry %></p>
      </div>
      <div>
        <span class="project-subtitle">Needs</span>
        <p class="project--subtext">
          <% @project.technologies.each do |technology| %>
            <%= technology.name %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class=" card card-wrapper--main">
    <div class="project--title-container">
      <span class="project-subtitle">Recommandations</span>
      <h1 class="project-title">Developper Picks</h1>
      <% @project.top_picks.each do |t| %>
        <%= t.developer_profile.user.first_name%>
      <% end %>

    </div>
  </div>

<%@project.top_picks.each do |top_pick| %>
  <%= link_to "See profile", developer_path(top_pick.developer_profile), class: "main-btn" %>
  <%= link_to "See profile", destroy_user_session_path, class: "main-btn" %>
<% end %>

  <div class="d-flex flex-column gap-2 align-items-start"><%= link_to "See profile", project_path(current_user.project), class: "main-btn" %>



</main>
<style>
  .project-section {
    padding: 24px;
    padding-top: 100px
  }
  .card-wrapper--main {
    padding: 8px;
    margin-bottom: 12px;
  }
  .project--title-container {
    padding-top: 8px;
    border-bottom: var( --stroke);
    margin-bottom: 24px;
  }

  .project-title {
  font-weight: 600;
  font-size: 40px;
  }
  .project-subtitle {
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    color: var(--txt-secondary);
  }

  .inline-flex {
    display: flex;
    justify-content: space-between;
  }
  .main-btn {
  justify-content: space-between;
 }
</style>
